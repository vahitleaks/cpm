                </div>
                <div class="col-11 my-2 pl-4">
                    <label class="font11" style="color: var(--thNewText);">
                        @y.STARTDATE.ToString("dd MMMM yyyy")-@y.ENDDATE.ToString("dd MMMM yyyy") <b>*</b>
                        @y.STARTDATE.ToString("HH:mm") - @y.ENDDATE.ToString("HH:mm")
