            <span class="my-2" style="margin-right: 8rem;">@y.SERVICETYPENAME</span>
        </div>
        <div class="card-body" style="padding: 2.5rem !important;padding-top: 0!important;">
            <input type="hidden" id="hdnSession" data-value="@(Request.RequestContext.HttpContext.Session["MessageForPlan"]?.ToString() ?? "")" />
            <div class="row mb-3">
                <div class="col-12 p-0 threeDots">
                    <img style="height: 4vh;" src="~/Images/iconsforservcie/icons8-company.png" />
                    <span class="Label-Blue" style="font-weight:bold;">@y.UNVAN</span>
                </div>
            </div>
