@if (ViewBag.SeviceFormDurum == true)
{
    <div class="row">
        <div class="col-3 float-left">
            <img src="~/Images/images/cpm/Lock Cross Icon.H03.2k.png" style="width: 250px; height:200px;" />
        </div>
        <div class="col-9 my-auto text-left">
            <span style="font-weight:bold;font-size:16px;color:var(--thHeadText);">Sayın,</span><span style="font-weight:bold;font-size:16px;color:var(--thCpmOrange);">&nbsp; @System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(Session["fName"]?.ToString() ?? "")</span> <br />
            <span class=""style="font-weight:bold;font-size:16px;color:var(--thHeadText);">Daha önce bu plana servis formu oluşturdunuz.Aynı plana ikinici bir servis formu oluşturamazsınız!</span>
        </div>
    </div>
}
else if (ViewBag.SeviceFormDurum == false)
{
    <div class="row">
        <div class="col-3 float-left">
            <img src="~/Images/images/cpm/Lock Cross Icon.H03.2k.png" style="width: 250px; height:200px;" />
        </div>
        <div class="col-9 my-auto text-left">
            <span style="font-weight:bold;font-size:16px;color:var(--thHeadText);">Sayın,</span><span style="font-weight:bold;font-size:16px;color:var(--thCpmOrange);">&nbsp; @System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(Session["fName"]?.ToString() ?? "")</span> <br />
            <span class="" style="font-weight:bold;font-size:16px;color:var(--thHeadText);">Yalnızca planda ekli olan "CPM Katılımcıları" plana bağlı servis formu oluşturabilir! Plansız servis formu oluşturmak için sayfadaki "Servis Formu Oluştur" butonuna tıklayabilirsiniz.</span>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-3 float-left">
            <img src="~/Images/images/cpm/Lock Cross Icon.H03.2k.png" style="width: 250px; height:200px;" />
        </div>
        <div class="col-9 my-auto text-left"><span class="" style="font-weight:bold;font-size:12px;color:var(--thRed);">HATA!</span></div>
    </div>
}






