@model List<dynamic>

<style>
    #ModalServiceForm ul li {
        float: left;
    }
</style>
@foreach (var item in Model)
    {
    <div class="card" style="box-shadow:none !important;border:none !important;">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <span class="bg-soft-primary rounded-pill px-3 p-2 font-weight-bold">@item.CompanyName</span>
                    <h6 class="mt-3 text-muted">@item.ContractName</h6>
                    <div class="row mt-4 mb-4">
                        <div class="col-12 text-left">
                            <label class="mb-2 font-13"><i class="mdi mdi-checkbox-marked-circle-outline text-success mr-2"></i><font class="font-weight-bold">Proje Adı :</font>&nbsp;@item.ProjectName</label><br />
                            <label class="mb-2 font-13"><i class="mdi mdi-checkbox-marked-circle-outline text-success mr-2"></i><font class="font-weight-bold">Proje Adımı :</font>&nbsp;@item.StepName</label><br />
                            <label class="mb-2 font-13"><i class="mdi mdi-checkbox-marked-circle-outline text-success mr-2"></i><font class="font-weight-bold">Firma Adı :</font>&nbsp;@item.CompanyName</label><br />
                            <label class="mb-2 font-13"><i class="mdi mdi-checkbox-marked-circle-outline text-success mr-2"></i><font class="font-weight-bold">Sözleşme :</font></label>&nbsp;@item.ContractName<br />
                            <label class="mb-2 font-13"><i class="mdi mdi-checkbox-marked-circle-outline text-success mr-2"></i><font class="font-weight-bold">Konu :</font></label>&nbsp;@item.Topic<br />
                            <label class="mb-2 font-13"><i class="mdi mdi-checkbox-marked-circle-outline text-success mr-2"></i><font class="font-weight-bold">Açıklama :</font>&nbsp;@item.Description</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="pro-order-box mb-2 mb-lg-0">
                                <i class="sc-calendar text-warning"></i>
                                <h4 class="header-title">Çalışma Günü</h4>
                                <p class="text-muted mb-0">
                                   @item.WorkDay
                                </p>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="pro-order-box mb-2 mb-lg-0">
                                <i class="sc-device-clock text-danger"></i>
                                <h4 class="header-title">Çalışma Süresi(Saat)</h4>
                                <p class="text-muted mb-0">
                                    @item.WorkHour
                                </p>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="pro-order-box mb-2 mb-lg-0">
                                <i class="sc-user text-success"></i>
                                <h4 class="header-title">Proje Sorumlusu</h4>
                                <p class="text-muted mb-0">
                                   @item.Responsible
                                </p>
                            </div>
                        </div><!--end col-->
                    </div><!--end row-->
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end card-body-->
    </div>
    }